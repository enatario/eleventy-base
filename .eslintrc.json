{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018,
    "allowImportExportEverywhere": true
  },
  "extends": [
    "eslint:recommended",
    "@thoughtbot/eslint-config"
  ],
  "overrides": [
    {
      "files": ["**/*.js"],
      "rules": {
        "quotes": ["error", "double", { "avoidEscape": true }]
      }
    }
  ]
}
